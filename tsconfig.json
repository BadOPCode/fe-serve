{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es2015"
        ],
        "outDir": "lib",
        "module": "umd",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "types": [
            "Node",
            "express"
        ],
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/client/**/*"
    ]
}

{
    "name": "fullstack-serve",
    "version": "0.3.8",
    "description": "Another web server for front end developers.",
    "main": "index.js",
    "scripts": {
        "build-dev": "ts-node ./bin/build-dev",
        "deploy": "ts-node ./bin/deploy",
        "build-server": "ts-node ./bin/build-server",
        "build-client": "ts-node ./bin/build-client",
        "build-tests": "ts-node ./bin/build-tests",
        "clean": "ts-node ./bin/clean",
        "test": "tsc -p tsconfig.test.json && nyc alsatian tests/**/*.spec.js"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "bin": {
        "fullstack-serve": "./bin/fullstack-serve"
    },
    "dependencies": {
        "@types/express": "^4.11.1",
        "@types/node": "^9.4.7",
        "@types/serve-index": "^1.7.29",
        "@types/shelljs": "^0.7.8",
        "@types/socket.io": "^1.4.33",
        "cout": "0.0.6",
        "dt-decisions": "0.0.4",
        "express": "^4.16.3",
        "glob-watcher": "^5.0.1",
        "serve-index": "^1.9.1",
        "shelljs": "^0.8.1",
        "socket.io": "^2.1.0"
    },
    "devDependencies": {
        "alsatian": "^2.2.1",
        "nyc": "^11.6.0",
        "rewiremock": "^3.7.0",
        "tap-bark": "^1.0.0",
        "ts-loader": "^4.1.0",
        "ts-node": "^5.0.1",
        "typescript": "^2.7.2",
        "webpack": "^4.4.1",
        "webpack-cli": "^2.0.13"
    },
    "nyc": {
        "exclude": [
            "**/*.spec.js"
        ],
        "reporter": [
            "lcov",
            "html"
        ],
        "report-dir": "./coverage"
    },
    "fullstack-serve": {
        "listenPort": 9000,
        "pathMaps": {
            "/": {
                "type": "static",
                "localPath": "examples"
            },
            "/pkg": {
                "type": "mock",
                "mockFile": "examples/TestEndpoint.js"
            },
            "/proxy": {
                "type": "proxy",
                "remote": {
                    "protocol": "http",
                    "hostname": "md5.jsontest.com",
                    "path": "/",
                    "port": 80
                }
            }
        },
        "watchTasks": [{
            "any": "ls"
        }]
    }
}
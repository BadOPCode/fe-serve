{
    "name": "fullstack-serve",
    "version": "1.0.5",
    "description": "A swiss army knife utility to help fullstack developers do their jobs and share uniformed environments with other developers.",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/BadOPCode/fullstack-serve.git"
    },
    "scripts": {
        "build-dev": "ts-node ./bin/build-dev",
        "deploy": "ts-node ./bin/deploy",
        "build-server": "ts-node ./bin/build-server",
        "build-client": "ts-node ./bin/build-client",
        "build-tests": "ts-node ./bin/build-tests",
        "build-docs": "ts-node ./bin/build-docs",
        "clean": "ts-node ./bin/clean",
        "test": "tsc -p tsconfig.test.json && nyc alsatian tests/**/*.spec.js",
        "flush": "rm -rf node_modules; rm package-lock.json"
    },
    "keywords": [],
    "author": "Shawn Rapp",
    "license": "MIT",
    "bin": {
        "fullstack": "./bin/fullstack"
    },
    "dependencies": {
        "cout": "0.0.6",
        "dt-decisions": "0.0.4",
        "express": "^4.16.3",
        "glob-watcher": "^5.0.1",
        "mime": "^2.3.1",
        "react-router-dom": "^4.3.1",
        "serve-index": "^1.9.1",
        "shelljs": "^0.8.2",
        "socket.io": "^2.1.1"
    },
    "devDependencies": {
        "@material-ui/core": "^1.5.1",
        "@types/classnames": "^2.2.6",
        "@types/cross-spawn": "^6.0.0",
        "@types/express": "^4.16.0",
        "@types/mime": "^2.0.0",
        "@types/node": "^10.5.8",
        "@types/react": "^16.4.9",
        "@types/react-dom": "^16.0.7",
        "@types/react-redux": "^6.0.6",
        "@types/react-router-dom": "^4.3.0",
        "@types/redux-actions": "^2.3.0",
        "@types/serve-index": "^1.7.29",
        "@types/shelljs": "^0.8.0",
        "@types/socket.io": "^1.4.36",
        "@types/uuid": "^3.4.3",
        "@types/webpack-env": "^1.13.6",
        "alsatian": "^2.3.0",
        "classnames": "^2.2.6",
        "cross-spawn": "^6.0.5",
        "css-loader": "^1.0.0",
        "node-sass": "^4.9.3",
        "nyc": "^12.0.2",
        "react": "^16.4.2",
        "react-dom": "^16.4.2",
        "react-redux": "^5.0.7",
        "react-router-hash-link": "^1.2.0",
        "redux": "^4.0.0",
        "redux-actions": "^2.6.1",
        "rewiremock": "^3.7.7",
        "run-spout": "^2.0.4",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.22.1",
        "tap-bark": "^1.0.0",
        "ts-loader": "^4.4.2",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "typescript": "^3.0.1",
        "uuid": "^3.3.2",
        "webpack": "^4.17.1",
        "webpack-cli": "^3.1.0",
        "xterm": "^3.6.0"
    },
    "nyc": {
        "exclude": [
            "**/*.spec.js"
        ],
        "reporter": [
            "lcov",
            "html"
        ],
        "report-dir": "./coverage"
    },
    "fullstack-serve": {
        "listenPort": 9000,
        "pathMaps": {
            "/docs": {
                "type": "static",
                "localPath": "docs/index.html"
            },
            "/static": {
                "type": "static",
                "localPath": "examples"
            },
            "/pkg": {
                "type": "mock",
                "mockFile": "examples/TestEndpoint.js"
            },
            "/proxy": {
                "type": "proxy",
                "remote": {
                    "protocol": "http",
                    "hostname": "md5.jsontest.com",
                    "path": "/",
                    "port": 80
                }
            }
        },
        "watchTasks": [
            {
                "masks": [
                    "src/client/**/*.ts*"
                ],
                "tasks": {
                    "any": "npm run build-client"
                }
            },
            {
                "masks": [
                    "docs-src/**/*"
                ],
                "tasks": {
                    "any": "npm run build-docs"
                }
            }
        ]
    }
}

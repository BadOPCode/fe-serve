{
    "name": "fe-serve",
    "version": "0.3.8",
    "description": "Another web server for front end developers.",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "build-tests": "tsc -p tsconfig.test.json",
        "clean": "ts-node ./bin/clean",
        "test": "npm run clean && npm run build-tests && npm run unit-tests",
        "unit-tests": "nyc alsatian tests/**/*.spec.js"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "bin": {
        "fe-serve": "./bin/fe-serve"
    },
    "dependencies": {
        "@types/express": "^4.11.1",
        "@types/node": "^9.4.7",
        "@types/serve-index": "^1.7.29",
        "@types/shelljs": "^0.7.8",
        "cout": "0.0.6",
        "dt-decisions": "0.0.4",
        "express": "^4.16.3",
        "express-modify-response": "^1.0.2",
        "glob-watcher": "^5.0.1",
        "serve-index": "^1.9.1",
        "shelljs": "^0.8.1",
        "socket.io": "^2.0.4"
    },
    "devDependencies": {
        "alsatian": "^2.2.1",
        "nyc": "^11.6.0",
        "tap-bark": "^1.0.0",
        "ts-node": "^5.0.1",
        "typescript": "^2.7.2"
    },
    "nyc": {
        "exclude": [
            "**/*.spec.js"
        ],
        "reporter": [
            "lcov",
            "html"
        ],
        "report-dir": "./coverage"
    },
    "fe-serve": {
        "listenPort": 9000,
        "pathMaps": {
            "/": {
                "type": "static",
                "localPath": "examples"
            },
            "/pkg": {
                "type": "mock",
                "mockFile": "package.json"
            }
        }
    }
}
